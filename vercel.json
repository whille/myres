{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/downloads/(.*)",
      "headers": {
        "Content-Disposition": "attachment"
      },
      "dest": "/public/downloads/$1"
    },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
