{
    "version": 2,
    "builds": [
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "headers": [
        {
            "source": "/downloads/(.*)",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/zip"
                },
                {
                    "key": "Content-Disposition",
                    "value": "attachment"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000"
                }
            ]
        }
    ]
}